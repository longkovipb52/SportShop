@model IEnumerable<SportShop.Models.ColorOption>
@{
    ViewData["Title"] = "Quản lý Màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-table.css" />
<link rel="stylesheet" href="~/css/attribute-management.css" asp-append-version="true" />

<div class="container-fluid colors-page">
    <!-- Header -->
    <div class="page-header colors-header">
        <div class="d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-primary" onclick="openAddModal()">
                <i class="fas fa-plus"></i> Thêm màu mới
            </button>
        </div>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" class="form-control" 
                           value="@ViewData["CurrentSearch"]" 
                           placeholder="Nhập tên màu...">
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()))
                    {
                        <a href="@Url.Action("Colors")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Xóa tìm kiếm
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên màu</th>
                                <th>Mã màu (Hex)</th>
                                <th>Xem trước</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int index = ((int)ViewData["CurrentPage"] - 1) * (int)ViewData["PageSize"] + 1; }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td><strong>@item.ColorName</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.HexCode))
                                        {
                                            <code>@item.HexCode</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.HexCode))
                                        {
                                            <div class="color-preview-box" style="background-color: @item.HexCode;" title="@item.HexCode"></div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ngưng</span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning" 
                                                onclick='editColor(@item.ColorOptionID, "@item.ColorName", "@item.HexCode", @item.IsActive.ToString().ToLower())'>
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                onclick="deleteColor(@item.ColorOptionID, '@item.ColorName')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if ((int)ViewData["TotalPages"] > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                            {
                                <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                                    <a class="page-link" href="?page=@i&search=@ViewData["CurrentSearch"]">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    Chưa có màu sắc nào. Hãy thêm màu mới!
                </div>
            }
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="colorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Thêm màu mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="colorForm">
                    <input type="hidden" id="colorOptionId" value="0" />
                    
                    <div class="mb-3">
                        <label for="colorName" class="form-label">Tên màu <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="colorName" required 
                               placeholder="Ví dụ: Đỏ, Xanh dương, Trắng...">
                    </div>

                    <div class="mb-3">
                        <label for="hexCode" class="form-label">Mã màu (Hex)</label>
                        <div class="input-group">
                            <input type="color" class="form-control form-control-color" id="colorPicker" 
                                   value="#000000" title="Chọn màu">
                            <input type="text" class="form-control" id="hexCode" 
                                   pattern="^#[0-9A-Fa-f]{6}$"
                                   placeholder="#000000">
                        </div>
                        <small class="form-text text-muted">Định dạng: #RRGGBB (ví dụ: #FF0000 cho màu đỏ)</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Xem trước</label>
                        <div id="colorPreview" style="width: 100%; height: 60px; border: 2px solid #dee2e6; border-radius: 4px; background-color: #000000;"></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive" checked>
                            <label class="form-check-label" for="isActive">Hoạt động</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveColor()">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin_attributes.js" asp-append-version="true"></script>
}
