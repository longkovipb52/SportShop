@model SportShop.Models.Brand

@{
    ViewData["Title"] = $"Chi tiết thương hiệu - {Model.Name}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin_brands.css" asp-append-version="true" />
}

<div class="brand-details-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-right">
                <a href="@Url.Action("Edit", new { id = Model.BrandID })" class="btn btn-warning">
                    <i class="fas fa-edit"></i>
                    Chỉnh sửa
                </a>
                <button type="button" class="btn btn-danger delete-brand-btn" 
                        data-brand-id="@Model.BrandID" 
                        data-brand-name="@Model.Name">
                    <i class="fas fa-trash"></i>
                    Xóa
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Nội dung chi tiết -->
    <div class="details-section">
        <div class="row">
            <!-- Thông tin chính -->
            <div class="col-lg-8">
                <div class="card brand-info-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-info-circle"></i>
                            Thông tin thương hiệu
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="brand-header">
                            <div class="brand-logo-large">
                                @if (!string.IsNullOrEmpty(Model.Logo))
                                {
                                    <img src="~/upload/branch/@Model.Logo" alt="@Model.Name" class="brand-main-logo">
                                }
                                else
                                {
                                    <div class="no-logo-large">
                                        <i class="fas fa-image"></i>
                                        <p>Chưa có logo</p>
                                    </div>
                                }
                            </div>
                            <div class="brand-basic-info">
                                <h1 class="brand-name">@Model.Name</h1>
                                <div class="brand-meta">
                                    <span class="meta-item">
                                        <i class="fas fa-hashtag"></i>
                                        ID: @Model.BrandID
                                    </span>
                                    @if (Model.CreatedAt.HasValue)
                                    {
                                        <span class="meta-item">
                                            <i class="fas fa-calendar-alt"></i>
                                            Tạo: @Model.CreatedAt.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="brand-description-section">
                            <h6>Mô tả</h6>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="brand-description">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có mô tả cho thương hiệu này.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Danh sách sản phẩm -->
                <div class="card products-in-brand-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-box"></i>
                            Sản phẩm của thương hiệu
                        </h5>
                        <div class="card-actions">
                            <a href="/Admin/Products?brandId=@Model.BrandID" class="btn btn-sm btn-primary">
                                <i class="fas fa-external-link-alt"></i>
                                Xem tất cả
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.Products != null && Model.Products.Any())
                        {
                            <div class="products-grid">
                                @foreach (var product in Model.Products.Take(6))
                                {
                                    <div class="product-card">
                                        <div class="product-image">
                                            @if (!string.IsNullOrEmpty(product.ImageURL))
                                            {
                                                <img src="~/upload/product/@product.ImageURL" alt="@product.Name">
                                            }
                                            else
                                            {
                                                <div class="no-product-image">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="product-info">
                                            <h6 class="product-name">@product.Name</h6>
                                            <div class="product-price">@product.Price.ToString("C0")</div>
                                            <div class="product-stock">
                                                @if (product.Stock > 0)
                                                {
                                                    <span class="stock-in">
                                                        <i class="fas fa-check-circle text-success"></i>
                                                        Còn @product.Stock
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="stock-out">
                                                        <i class="fas fa-exclamation-triangle text-danger"></i>
                                                        Hết hàng
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <div class="product-actions">
                                            <a href="/Admin/Products/Details/@product.ProductID" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/Admin/Products/Edit/@product.ProductID" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (Model.Products.Count() > 6)
                            {
                                <div class="text-center mt-3">
                                    <p class="text-muted">Và @(Model.Products.Count() - 6) sản phẩm khác...</p>
                                    <a href="/Admin/Products?brandId=@Model.BrandID" class="btn btn-outline-primary">
                                        <i class="fas fa-list"></i>
                                        Xem tất cả @Model.Products.Count() sản phẩm
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-products">
                                <div class="empty-icon">
                                    <i class="fas fa-box-open"></i>
                                </div>
                                <h6>Chưa có sản phẩm nào</h6>
                                <p>Thương hiệu này chưa có sản phẩm nào. Bạn có thể thêm sản phẩm mới.</p>
                                <a href="/Admin/Products/Create?brandId=@Model.BrandID" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>
                                    Thêm sản phẩm đầu tiên
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar thống kê -->
            <div class="col-lg-4">
                <!-- Thống kê tổng quan -->
                <div class="card stats-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-chart-bar"></i>
                            Thống kê tổng quan
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="stats-grid" id="brandStats">
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-box text-primary"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="totalProducts">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                    <div class="stat-label">Tổng sản phẩm</div>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-warehouse text-success"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="totalStock">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                    <div class="stat-label">Tổng tồn kho</div>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-check-circle text-info"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="inStock">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                    <div class="stat-label">Còn hàng</div>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-number" id="outOfStock">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                    <div class="stat-label">Hết hàng</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hành động nhanh -->
                <div class="card actions-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-bolt"></i>
                            Hành động nhanh
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="quick-actions">
                            <a href="@Url.Action("Edit", new { id = Model.BrandID })" class="action-btn">
                                <i class="fas fa-edit"></i>
                                <span>Chỉnh sửa thương hiệu</span>
                            </a>
                            <a href="/Admin/Products/Create?brandId=@Model.BrandID" class="action-btn">
                                <i class="fas fa-plus"></i>
                                <span>Thêm sản phẩm mới</span>
                            </a>
                            <a href="/Admin/Products?brandId=@Model.BrandID" class="action-btn">
                                <i class="fas fa-list"></i>
                                <span>Quản lý sản phẩm</span>
                            </a>
                            <button type="button" class="action-btn delete-brand-btn" 
                                    data-brand-id="@Model.BrandID" 
                                    data-brand-name="@Model.Name">
                                <i class="fas fa-trash text-danger"></i>
                                <span>Xóa thương hiệu</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteBrandModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa thương hiệu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa thương hiệu <strong id="brandNameToDelete"></strong>?</p>
                <p class="text-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Hành động này không thể hoàn tác!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/js/admin_brands.js" asp-append-version="true"></script>
    <script>
        // Load thống kê thương hiệu
        document.addEventListener('DOMContentLoaded', function() {
            loadBrandStats(@Model.BrandID);
        });
    </script>
}