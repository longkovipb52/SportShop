@model SportShop.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin_categories.css" asp-append-version="true" />
}

<div class="category-form-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-left">
                <h2 class="page-title">
                    <i class="fas fa-plus-circle"></i>
                    Thêm danh mục mới
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")">
                                <i class="fas fa-tags"></i> Danh mục
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Thêm mới</li>
                    </ol>
                </nav>
            </div>
            <div class="header-right">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Form -->
    <div class="form-section">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-info-circle"></i>
                            Thông tin danh mục
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label required">Tên danh mục</label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục...">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="4" 
                                         placeholder="Nhập mô tả cho danh mục..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">Mô tả chi tiết về danh mục sản phẩm này</div>
                            </div>

                            <!-- Image Upload Section -->
                            <div class="mb-3">
                                <label class="form-label">Hình ảnh danh mục</label>
                                <div class="image-upload-section">
                                    <div class="image-preview-container">
                                        <div class="image-preview" id="imagePreview">
                                            <div class="preview-placeholder">
                                                <i class="fas fa-image"></i>
                                                <p>Chưa có hình ảnh</p>
                                            </div>
                                        </div>
                                        <div class="image-actions" id="imageActions" style="display: none;">
                                            <button type="button" class="btn btn-sm btn-danger" onclick="removeImage()">
                                                <i class="fas fa-trash"></i>
                                                Xóa
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <div class="image-upload-controls">
                                        <input type="file" id="imageFile" name="imageFile" accept="image/*" 
                                               class="form-control" onchange="previewImage(this)">
                                        <div class="form-text">
                                            <i class="fas fa-info-circle"></i>
                                            Chọn hình ảnh (JPG, PNG, GIF) - Tối đa 5MB
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i>
                                    Lưu danh mục
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i>
                                    Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Card hướng dẫn -->
                <div class="card help-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-lightbulb"></i>
                            Hướng dẫn
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="help-list">
                            <li>
                                <i class="fas fa-check text-success"></i>
                                Tên danh mục nên ngắn gọn và dễ hiểu
                            </li>
                            <li>
                                <i class="fas fa-check text-success"></i>
                                Mô tả giúp khách hàng hiểu rõ về loại sản phẩm
                            </li>
                            <li>
                                <i class="fas fa-check text-success"></i>
                                Hình ảnh nên có kích thước 300x300px để hiển thị tốt nhất
                            </li>
                            <li>
                                <i class="fas fa-check text-success"></i>
                                Tất cả thông tin đều có thể chỉnh sửa sau
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin_categories.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}