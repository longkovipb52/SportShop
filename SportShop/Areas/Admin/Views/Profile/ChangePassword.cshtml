@model SportShop.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin_profile.css" asp-append-version="true" />
    <style>
        /* Inline CSS override để đảm bảo không có conflicts */
        .change-password-form .form-label i {
            position: static !important;
            right: auto !important;
            top: auto !important;
            transform: none !important;
            background: none !important;
            border: none !important;
            width: 16px !important;
            height: auto !important;
            z-index: auto !important;
        }
        
        .change-password-form .password-toggle {
            position: absolute !important;
            right: 10px !important;
            top: 50% !important;
            transform: translateY(-50%) !important;
            z-index: 100 !important;
        }
    </style>
}

<div class="profile-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-left">
                <h1 class="page-title">
                    <i class="fas fa-key"></i>
                    Đổi mật khẩu
                </h1>
                <p class="page-subtitle">Thay đổi mật khẩu đăng nhập tài khoản</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Change Password Form -->
    <div class="profile-card change-password-card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-lock"></i>
                Thay đổi mật khẩu
            </h3>
        </div>
        
        <form asp-action="ChangePassword" method="post" class="change-password-form">
            @Html.AntiForgeryToken()
            
            <div class="form-body">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="password-requirements">
                            <h5><i class="fas fa-info-circle"></i> Yêu cầu mật khẩu:</h5>
                            <ul>
                                <li>Ít nhất 6 ký tự</li>
                                <li>Không được trùng với mật khẩu cũ</li>
                                <li>Nên chứa chữ hoa, chữ thường và số</li>
                            </ul>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="form-label">
                                @Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <div class="input-with-icon">
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <div class="password-input-group">
                                    <input asp-for="CurrentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                                    <button type="button" class="password-toggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">
                                @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <div class="input-with-icon">
                                <div class="input-icon">
                                    <i class="fas fa-key"></i>
                                </div>
                                <div class="password-input-group">
                                    <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                                    <button type="button" class="password-toggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                @Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <div class="input-with-icon">
                                <div class="input-icon">
                                    <i class="fas fa-check-double"></i>
                                </div>
                                <div class="password-input-group">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                                    <button type="button" class="password-toggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-footer">
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Đổi mật khẩu
                    </button>
                    <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        Hủy bỏ
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Security Tips -->
    <div class="security-tips">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-shield-alt"></i> Lời khuyên bảo mật</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="tip-item">
                            <i class="fas fa-random"></i>
                            <h5>Mật khẩu mạnh</h5>
                            <p>Sử dụng mật khẩu phức tạp với chữ hoa, chữ thường, số và ký tự đặc biệt.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="tip-item">
                            <i class="fas fa-sync-alt"></i>
                            <h5>Thay đổi định kỳ</h5>
                            <p>Nên thay đổi mật khẩu ít nhất 3 tháng một lần để đảm bảo an toàn.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="tip-item">
                            <i class="fas fa-user-secret"></i>
                            <h5>Bảo mật tuyệt đối</h5>
                            <p>Không chia sẻ mật khẩu với bất kỳ ai và luôn đăng xuất sau khi sử dụng.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/admin_profile.js" asp-append-version="true"></script>
}