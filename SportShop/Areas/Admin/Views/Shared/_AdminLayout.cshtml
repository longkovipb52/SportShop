<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportShop Admin</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin_user_base.css" asp-append-version="true" />
    
    <style>
        .submenu {
            list-style: none;
            padding-left: 0;
            margin-top: 8px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border-radius: 10px;
            overflow: hidden;
            border-left: 3px solid #667eea;
            box-shadow: inset 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .submenu li {
            margin: 0;
        }
        
        .submenu a {
            display: flex;
            align-items: center;
            padding: 12px 20px 12px 50px;
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            position: relative;
        }
        
        .submenu a::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 3px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }
        
        .submenu a:hover::before,
        .submenu a.active::before {
            transform: scaleY(1);
        }
        
        .submenu a:hover,
        .submenu a.active {
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
            color: #fff;
            padding-left: 55px;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
        }
        
        .submenu a i {
            margin-right: 10px;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }
        
        .submenu a:hover i {
            transform: scale(1.2) rotate(5deg);
        }
        
        .submenu-toggle {
            margin-left: auto;
            font-size: 0.75rem;
            transition: transform 0.3s ease;
        }
        
        .nav-link {
            position: relative;
            overflow: hidden;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .nav-link:hover::after,
        .nav-link.active::after {
            transform: scaleX(1);
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
    
    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>
<body class="admin-body">
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <img src="~/image/logo.png" alt="SportShop" class="logo-img">
                <span class="logo-text">SportShop Admin</span>
            </div>
            <button class="sidebar-toggle d-lg-none" id="sidebarToggle">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="sidebar-content">
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/Admin/Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")" href="/Admin/Orders">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")" href="/Admin/Products">
                        <i class="fas fa-box"></i>
                        <span>Sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" || ViewContext.RouteData.Values["Controller"]?.ToString() == "SubCategory" ? "active" : "")" href="#" onclick="event.preventDefault(); toggleCategorySubmenu(this)">
                        <i class="fas fa-tags"></i>
                        <span>Quản lý danh mục</span>
                        <i class="fas fa-chevron-down submenu-toggle"></i>
                    </a>
                    <ul class="submenu" style="display: none;">
                        <li>
                            <a href="/Admin/Categories" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")">
                                <i class="fas fa-folder"></i>
                                Danh mục cha
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/SubCategory" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "SubCategory" ? "active" : "")">
                                <i class="fas fa-sitemap"></i>
                                Danh mục con
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Brands" ? "active" : "")" href="/Admin/Brands">
                        <i class="fas fa-award"></i>
                        <span>Thương hiệu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AttributeManagement" ? "active" : "")" href="#" onclick="event.preventDefault(); toggleAttributeSubmenu(this)">
                        <i class="fas fa-cogs"></i>
                        <span>Thuộc tính sản phẩm</span>
                        <i class="fas fa-chevron-down submenu-toggle"></i>
                    </a>
                    <ul class="submenu" style="display: none;">
                        <li>
                            <a href="/Admin/AttributeManagement/Sizes" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Sizes" ? "active" : "")">
                                <i class="fas fa-ruler"></i>
                                Kích thước
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/AttributeManagement/Colors" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Colors" ? "active" : "")">
                                <i class="fas fa-palette"></i>
                                Màu sắc
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Customers">
                        <i class="fas fa-users"></i>
                        <span>Khách hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reviews" ? "active" : "")" href="/Admin/Reviews">
                        <i class="fas fa-star-half-alt"></i>
                        <span>Đánh giá</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Vouchers" ? "active" : "")" href="/Admin/Vouchers">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Voucher</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contacts" ? "active" : "")" href="/Admin/Contacts">
                        <i class="fas fa-envelope"></i>
                        <span>Liên hệ</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")" href="/Admin/Reports">
                        <i class="fas fa-chart-bar"></i>
                        <span>Báo cáo</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Settings">
                        <i class="fas fa-cog"></i>
                        <span>Cài đặt</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="sidebar-toggle d-lg-none" id="sidebarToggleTop">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">@ViewData["Title"]</h1>
            </div>
            
            <div class="topbar-right">

                
                <div class="topbar-notifications">
                    <div class="notification-bell">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                </div>
                
                <div class="topbar-user">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-info">
                        <span class="user-name">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value ?? User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "Admin")
                            }
                            else
                            {
                                @("Admin")
                            }
                        </span>
                        <span class="user-role">Quản trị viên</span>
                    </div>
                    <div class="user-dropdown">
                        <i class="fas fa-chevron-down"></i>
                        <div class="dropdown-menu">
                            <a href="@Url.Action("Index", "Profile")" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                Thông tin cá nhân
                            </a>
                            <a href="@Url.Action("ChangePassword", "Profile")" class="dropdown-item">
                                <i class="fas fa-key"></i>
                                Đổi mật khẩu
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-cog"></i>
                                Cài đặt
                            </a>
                            <div class="dropdown-divider"></div>
                            <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item logout-btn">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="page-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/admin_user.js" asp-append-version="true"></script>
    
    <script>
        function toggleAttributeSubmenu(element) {
            const submenu = element.nextElementSibling;
            const toggle = element.querySelector('.submenu-toggle');
            
            if (submenu.style.display === 'none') {
                submenu.style.display = 'block';
                toggle.style.transform = 'rotate(180deg)';
                element.classList.add('active');
            } else {
                submenu.style.display = 'none';
                toggle.style.transform = 'rotate(0deg)';
                element.classList.remove('active');
            }
        }

        function toggleCategorySubmenu(element) {
            const submenu = element.nextElementSibling;
            const toggle = element.querySelector('.submenu-toggle');
            
            if (submenu.style.display === 'none') {
                submenu.style.display = 'block';
                toggle.style.transform = 'rotate(180deg)';
                element.classList.add('active');
            } else {
                submenu.style.display = 'none';
                toggle.style.transform = 'rotate(0deg)';
                element.classList.remove('active');
            }
        }

        // Auto-expand submenus based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const controller = '@(ViewContext.RouteData.Values["Controller"]?.ToString() ?? "")';
            
            // Auto-expand Attribute Management submenu
            if (controller === 'AttributeManagement') {
                const attrLink = document.querySelector('a[onclick*="toggleAttributeSubmenu"]');
                if (attrLink) {
                    const submenu = attrLink.nextElementSibling;
                    const toggle = attrLink.querySelector('.submenu-toggle');
                    submenu.style.display = 'block';
                    toggle.style.transform = 'rotate(180deg)';
                    attrLink.classList.add('active');
                }
            }
            
            // Auto-expand Category submenu
            if (controller === 'Categories' || controller === 'SubCategory') {
                const catLink = document.querySelector('a[onclick*="toggleCategorySubmenu"]');
                if (catLink) {
                    const submenu = catLink.nextElementSibling;
                    const toggle = catLink.querySelector('.submenu-toggle');
                    submenu.style.display = 'block';
                    toggle.style.transform = 'rotate(180deg)';
                    catLink.classList.add('active');
                }
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>