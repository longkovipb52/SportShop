@{
    ViewData["Title"] = "Giới thiệu | LoLoSport";
    
    ViewData["CustomCSS"] = "about.css";
}

<!-- Hero Section -->
<div class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4 animated fadeInDown">Về LoLoSport</h1>
                <p class="lead text-white-50 mb-5 animated fadeInUp">Chúng tôi không chỉ bán đồ thể thao, chúng tôi truyền cảm hứng cho lối sống năng động và khỏe mạnh.</p>
            </div>
        </div>
    </div>
</div>

<!-- Our Story Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <!-- Our Story Section: Thay đổi đường dẫn ảnh -->
                <div class="about-img-wrapper rounded-4 overflow-hidden shadow-lg">
                    <img src="~/image/about-banner.png" class="img-fluid" alt="Our Story" 
                         onerror="this.src='/image/about-banner.png'">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="content-wrapper">
                    <h6 class="text-primary text-uppercase fw-bold mb-2">Câu chuyện của chúng tôi</h6>
                    <h2 class="display-6 fw-bold mb-4">Hành trình từ niềm đam mê đến thương hiệu hàng đầu</h2>
                    <p class="text-muted mb-4">
                        LoLoSport được thành lập vào năm 2020 bởi nhóm những người yêu thể thao với mong muốn mang đến 
                        những sản phẩm thể thao chất lượng cao với giá cả phải chăng cho người tiêu dùng Việt Nam.
                    </p>
                    <p class="text-muted mb-4">
                        Khởi đầu chỉ với một cửa hàng nhỏ tại Thành phố Hồ Chí Minh, đến nay LoLoSport đã phát triển 
                        thành chuỗi cửa hàng trên toàn quốc và website thương mại điện tử hàng đầu trong lĩnh vực thể thao.
                    </p>
                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <div class="stat-item text-center">
                            <h3 class="fw-bold mb-0 gradient-text">5+</h3>
                            <p class="small text-muted">Năm kinh nghiệm</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="fw-bold mb-0 gradient-text">20+</h3>
                            <p class="small text-muted">Cửa hàng trên toàn quốc</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="fw-bold mb-0 gradient-text">50k+</h3>
                            <p class="small text-muted">Khách hàng hài lòng</p>
                        </div>
                        <div class="stat-item text-center">
                            <h3 class="fw-bold mb-0 gradient-text">100+</h3>
                            <p class="small text-muted">Nhân viên tận tâm</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

