<!-- Testimonials -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h6 class="text-primary text-uppercase fw-bold mb-2">Khách hàng nói gì</h6>
                <h2 class="display-6 fw-bold mb-4">Những trải nghiệm từ khách hàng</h2>
                <p class="text-muted col-lg-8 mx-auto">
                    Chúng tôi tự hào về những phản hồi tích cực từ khách hàng - những người đã tin tưởng và lựa chọn LoLoSport.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var testimonials = ViewBag.Testimonials as List<SportShop.Models.ViewModels.TestimonialViewModel>;
                            bool hasTestimonials = testimonials != null && testimonials.Any();
                            
                            if (hasTestimonials)
                            {
                                // Chia testimonials thành các nhóm 2 đánh giá mỗi nhóm
                                var groupedTestimonials = testimonials
                                    .Select((item, index) => new { Item = item, Index = index })
                                    .GroupBy(x => x.Index / 2)
                                    .Select(g => g.Select(x => x.Item).ToList())
                                    .ToList();
                                
                                for (int i = 0; i < groupedTestimonials.Count; i++)
                                {
                                    var group = groupedTestimonials[i];
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <div class="row justify-content-center">
                                            @foreach (var testimonial in group)
                                            {
                                                <div class="col-lg-6">
                                                    <div class="testimonial-card text-center p-4 shadow-sm rounded-4 bg-white h-100">
                                                        <div class="testimonial-rating mb-3">
                                                            @for (int j = 1; j <= 5; j++)
                                                            {
                                                                if (j <= testimonial.Rating)
                                                                {
                                                                    <i class="fas fa-star text-warning"></i>
                                                                }
                                                                else if (j - 0.5 <= testimonial.Rating)
                                                                {
                                                                    <i class="fas fa-star-half-alt text-warning"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="far fa-star text-warning"></i>
                                                                }
                                                            }
                                                        </div>
                                                        <p class="testimonial-text mb-3">
                                                            "@testimonial.Comment"
                                                        </p>
                                                        <p class="text-muted small mb-3">
                                                            <i class="fas fa-shopping-bag me-1"></i> Đã mua: @testimonial.ProductName
                                                        </p>
                                                        <div class="testimonial-author">
                                                            <h5 class="fw-bold mb-1">@testimonial.UserFullName</h5>
                                                            <p class="text-muted mb-0">Khách hàng</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                // Sử dụng dữ liệu mẫu nếu không có đánh giá nào
                                <div class="carousel-item active">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <div class="testimonial-card text-center p-5 shadow-sm rounded-4 bg-white">
                                                <div class="testimonial-rating mb-3">
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                </div>
                                                <p class="testimonial-text mb-4">
                                                    "LoLoSport là điểm đến lý tưởng cho những người yêu thích thể thao như tôi. Sản phẩm chính hãng, 
                                                    nhân viên tư vấn nhiệt tình và chuyên nghiệp. Tôi đã mua giày chạy bộ Nike và rất hài lòng với chất lượng."
                                                </p>
                                                <div class="testimonial-author">
                                                    <h5 class="fw-bold mb-1">Hoàng Minh Tuấn</h5>
                                                    <p class="text-muted mb-0">Huấn luyện viên thể hình</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <div class="testimonial-card text-center p-5 shadow-sm rounded-4 bg-white">
                                                <div class="testimonial-rating mb-3">
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                </div>
                                                <p class="testimonial-text mb-4">
                                                    "Tôi thực sự ấn tượng với dịch vụ giao hàng nhanh chóng và chất lượng sản phẩm từ LoLoSport. 
                                                    Quần áo thể thao Adidas mà tôi mua có chất lượng tuyệt vời và giá cả phải chăng."
                                                </p>
                                                <div class="testimonial-author">
                                                    <h5 class="fw-bold mb-1">Nguyễn Thị Mai</h5>
                                                    <p class="text-muted mb-0">Giáo viên yoga</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <div class="testimonial-card text-center p-5 shadow-sm rounded-4 bg-white">
                                                <div class="testimonial-rating mb-3">
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <i class="fas fa-star-half-alt text-warning"></i>
                                                </div>
                                                <p class="testimonial-text mb-4">
                                                    "Là một vận động viên chuyên nghiệp, tôi rất khó tính trong việc lựa chọn trang phục và dụng cụ tập luyện. 
                                                    LoLoSport đã đáp ứng được yêu cầu của tôi với các sản phẩm chính hãng và chất lượng cao."
                                                </p>
                                                <div class="testimonial-author">
                                                    <h5 class="fw-bold mb-1">Trần Quang Huy</h5>
                                                    <p class="text-muted mb-0">Vận động viên bóng rổ</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    
                    <!-- Carousel Indicators -->
                    @if (hasTestimonials)
                    {
                        <div class="carousel-indicators-container mt-4">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < (testimonials.Count + 1) / 2; i++)
                                {
                                    <button type="button" data-bs-target="#testimonialCarousel" 
                                            data-bs-slide-to="@i" 
                                            class="@(i == 0 ? "active" : "")" 
                                            aria-current="@(i == 0 ? "true" : "false")" 
                                            aria-label="Slide @(i + 1)"></button>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-indicators-container mt-4">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 cta-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="cta-content text-center py-5 rounded-4 bg-dark text-white">
                    <h2 class="display-5 fw-bold mb-4">Sẵn sàng cho trải nghiệm mua sắm tốt nhất?</h2>
