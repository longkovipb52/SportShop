@model SportShop.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    ViewData["CustomCSS"] = "account.css";
}

<!-- Hidden elements for toast notification system -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    var errors = new List<string>();
    foreach (var modelState in ViewData.ModelState.Values)
    {
        foreach (var error in modelState.Errors)
        {
            errors.Add(error.ErrorMessage);
        }
    }
    <div data-modelstate-errors='@System.Text.Json.JsonSerializer.Serialize(errors)' style="display: none;"></div>
}

<div class="auth-container">
    <div class="auth-decoration auth-decoration-1"></div>
    <div class="auth-decoration auth-decoration-2"></div>
    
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <span class="text-pink">LoLo</span>Sport
            </div>
            <h1 class="auth-title">Quên mật khẩu?</h1>
            <p class="auth-subtitle">Nhập tên đăng nhập và email để nhận mã xác thực</p>
        </div>
        
        <div class="auth-body">
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" placeholder=" " autocomplete="username" />
                    <label asp-for="Username">
                        <i class="fas fa-user"></i> Tên đăng nhập
                    </label>
                    <span asp-validation-for="Username" class="invalid-feedback"></span>
                </div>
                
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder=" " autocomplete="email" />
                    <label asp-for="Email">
                        <i class="fas fa-envelope"></i> Email
                    </label>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>
                
                <div class="alert alert-info" style="font-size: 0.9rem; margin-top: 1rem;">
                    <i class="fas fa-info-circle me-2"></i>
                    Vui lòng nhập chính xác tên đăng nhập và email đã đăng ký.
                </div>
                
                <button type="submit" class="btn btn-auth mt-4" id="forgotPasswordBtn">
                    <span class="btn-text">
                        <i class="fas fa-paper-plane me-2"></i>Gửi mã xác thực
                    </span>
                    <span class="btn-spinner d-none">
                        <i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...
                    </span>
                </button>
            </form>
            
            <div class="auth-footer mt-4">
                <a asp-controller="Account" asp-action="Login">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại đăng nhập
                </a>
                <span class="mx-2">|</span>
                <a asp-controller="Account" asp-action="Register">
                    Chưa có tài khoản?
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('forgotPasswordForm');
            const btn = document.getElementById('forgotPasswordBtn');
            
            if (form && btn) {
                form.addEventListener('submit', function(e) {
                    const btnText = btn.querySelector('.btn-text');
                    const btnSpinner = btn.querySelector('.btn-spinner');
                    
                    if (form.checkValidity()) {
                        btnText.classList.add('d-none');
                        btnSpinner.classList.remove('d-none');
                        btn.disabled = true;
                    }
                });
            }
        });
    </script>
}
