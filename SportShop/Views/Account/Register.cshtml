@model SportShop.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    ViewData["CustomCSS"] = "account.css";
}

<!-- Hidden elements for toast notification system -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    var errors = new List<string>();
    foreach (var modelState in ViewData.ModelState.Values)
    {
        foreach (var error in modelState.Errors)
        {
            errors.Add(error.ErrorMessage);
        }
    }
    <div data-modelstate-errors='@System.Text.Json.JsonSerializer.Serialize(errors)' style="display: none;"></div>
}

<div class="auth-container">
    <div class="auth-decoration auth-decoration-1"></div>
    <div class="auth-decoration auth-decoration-2"></div>
    
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <span class="text-pink">LoLo</span>Sport
            </div>
            <h1 class="auth-title">Tạo tài khoản mới</h1>
            <p class="auth-subtitle">Đăng ký để trở thành thành viên của LoLoSport</p>
        </div>
        
        <div class="auth-body">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="register-form">
                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" placeholder=" " />
                        <label asp-for="Username"></label>
                        <span asp-validation-for="Username" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="FullName" class="form-control" placeholder=" " />
                        <label asp-for="FullName"></label>
                        <span asp-validation-for="FullName" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" placeholder=" " />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Phone" class="form-control" placeholder=" " />
                        <label asp-for="Phone"></label>
                        <span asp-validation-for="Phone" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating" style="grid-column: span 2;">
                        <input asp-for="Address" class="form-control" placeholder=" " />
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" placeholder=" " />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder=" " />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="d-grid" style="grid-column: span 2;">
                        <button type="submit" class="btn btn-auth" id="registerBtn">
                            <span class="btn-text">Đăng ký</span>
                            <span class="btn-spinner d-none">
                                <i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
            
            <div class="auth-footer">
                Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Tạm thời tắt jQuery validation để test *@
    @* <partial name="_ValidationScriptsPartial" /> *@
    <script src="~/js/account.js" asp-append-version="true"></script>
}