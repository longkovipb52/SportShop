// Check wishlist status for all products - optimized
function checkAllWishlistStatus() {
    // Get all unique product IDs from the page
    const productIds = new Set();
    
    // From data-product-id attributes
    document.querySelectorAll('[data-product-id]').forEach(element => {
        const productId = parseInt(element.getAttribute('data-product-id'));
        if (productId && productId > 0) productIds.add(productId);
    });
    
    // From onclick handlers
    document.querySelectorAll('[onclick*="handleAddToWishlist"]').forEach(element => {
        const match = element.getAttribute('onclick').match(/handleAddToWishlist\((\d+)\)/);
        if (match) {
            const productId = parseInt(match[1]);
            if (productId > 0) productIds.add(productId);
        }
    });
    
    // Batch check instead of individual requests
    if (productIds.size > 0) {
        const productIdArray = Array.from(productIds);
        
        // Send batch request instead of individual ones
        fetch('/Wishlist/CheckMultiple', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ productIds: productIdArray })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Update all buttons based on batch result
                Object.entries(data.wishlistStatus || {}).forEach(([productId, inWishlist]) => {
                    updateWishlistButtonState(parseInt(productId), inWishlist);
                });
            }
        })
        .catch(error => {
            console.log('Could not batch check wishlist status:', error);
            // Fallback to individual checks but throttled
            productIdArray.forEach((productId, index) => {
                setTimeout(() => checkWishlistStatus(productId), index * 100);
            });
        });
    }
}

