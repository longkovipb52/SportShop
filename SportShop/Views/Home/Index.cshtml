<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize add to cart functionality
    initAddToCart();
    
    // Initialize wishlist functionality
    initWishlist();
    
    // Initialize quick view functionality
    initQuickView();
    
    // Check wishlist status for all products on page load
    checkAllWishlistStatus();
    
    // Lazy load recommendations using Intersection Observer
    const recommendationsSection = document.getElementById('user-recommendations');
    if (recommendationsSection) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Load recommendations when section comes into view
                    if (typeof window.loadRecommendations === 'function') {
                        window.loadRecommendations();
                    }
                    observer.unobserve(entry.target);
                }
            });
        }, {
            rootMargin: '100px' // Start loading 100px before the section is visible
        });
        
        observer.observe(recommendationsSection);
    }
    
    // Re-initialize after any dynamic content changes - throttled
    let observerTimeout;
    const observer = new MutationObserver(function(mutations) {
        // Throttle observer execution to reduce performance impact
        if (observerTimeout) return;
        
        observerTimeout = setTimeout(() => {
            let shouldReinitialize = false;
            mutations.forEach(function(mutation) {
                if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
                    // Only reinitialize if new product cards were added
                    for (let node of mutation.addedNodes) {
                        if (node.nodeType === 1 && (node.classList.contains('product-card') || node.querySelector('.product-card'))) {
                            shouldReinitialize = true;
                            break;
                        }
                    }
                }
            });
            
            if (shouldReinitialize) {
                // Re-initialize for any new buttons added
                initAddToCart();
                initWishlist();
                initQuickView();
                checkAllWishlistStatus();
            }
            
            observerTimeout = null;
        }, 200);
    });
    
    // Observe changes to recommendations container
    const recommendationsContainer = document.getElementById('user-recommendations');
    if (recommendationsContainer) {
        observer.observe(recommendationsContainer, { childList: true, subtree: true });
    }
    
    // Also observe tab content for brand products
    const tabContent = document.querySelector('.tab-content');
    if (tabContent) {
        observer.observe(tabContent, { childList: true, subtree: true });
    }
});

// Add to cart functionality
function initAddToCart() {
    const addToCartButtons = document.querySelectorAll('.add-to-cart:not([data-cart-initialized])');
    
    addToCartButtons.forEach(button => {
        // Mark as initialized to prevent multiple listeners
