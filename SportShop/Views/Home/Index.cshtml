// Update wishlist button state
function updateWishlistButtonState(productId, inWishlist) {
    // Update all wishlist buttons for this product (data-product-id version)
    const wishlistButtons = document.querySelectorAll(`[data-product-id="${productId}"].add-to-wishlist`);
    wishlistButtons.forEach(button => {
