@model SportShop.Models.ViewModels.ProductDetailViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<script>
    // Tự động chuyển hướng về trang Product Index và mở modal
    document.addEventListener('DOMContentLoaded', function() {
        const productId = @Model.Product.ProductID;
        console.log('Details page loaded, redirecting to Index with modal for product:', productId);
        window.location.href = `/Product/Index?openModal=${productId}`;
    });
</script>

<div class="container py-5">
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Đang chuyển hướng...</p>
    </div>
</div>
