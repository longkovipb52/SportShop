@startuml
left to right direction
skinparam usecase {
  BackgroundColor LightBlue
  BorderColor DarkBlue
  FontSize 12
}
skinparam actor {
  BackgroundColor LightYellow
  BorderColor DarkOrange
  FontSize 14
}
skinparam rectangle {
  BackgroundColor WhiteSmoke
  BorderColor Gray
  FontSize 14
}

actor "Khách hàng"

rectangle "Website SportShop" {
  usecase "Xem nhanh sản phẩm" as UC_QuickView
  usecase "Hiển thị thông tin sản phẩm" as UC_ShowInfo
  usecase "Chọn thuộc tính (màu, size)" as UC_SelectAttribute
  usecase "Kiểm tra tồn kho" as UC_CheckStock
  usecase "Thêm vào giỏ hàng" as UC_AddToCart

  "Khách hàng" -- UC_QuickView

  UC_QuickView ..> UC_ShowInfo : <<include>>
  UC_QuickView ..> UC_SelectAttribute : <<include>>
  UC_ShowInfo ..> UC_CheckStock : <<extend>>
  UC_SelectAttribute ..> UC_AddToCart : <<extend>>
}
@enduml
